<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>List BudgetItems</title>
</head>
<body>
<h2>Weekly</h2>
<table>
<tr><td><b>ITEM</b></td><td><b>LIMIT</b></td><td><b>TOTAL</b></td></tr>
{{range .Weekly}}
<tr>
<td>{{.Item.Category}}</td><td>${{.Item.Limit}}</td><td>${{.Total}}</td>
</tr>
{{end}}
</table>
<h2>Monthly</h2>
<table>
<tr><td><b>ITEM</b></td><td><b>LIMIT</b></td><td><b>TOTAL</b></td></tr>
{{range .Monthly}}
<tr>
<td>{{.Item.Category}}</td><td>${{.Item.Limit}}</td><td>${{.Total}}</td>
</tr>
{{end}}
</table>
</body>
</html>